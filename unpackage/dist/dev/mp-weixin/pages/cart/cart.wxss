
.cart-block-item{
	width: 712rpx;
	height: 252rpx;
	margin: auto;
	padding: 34rpx 25rpx;
	margin-top: 21rpx;
	background-color: #ffffff;
	box-shadow: 0px 2px 20px 0px
	rgba(0, 0, 0, 0.02);
	box-sizing: border-box;
	border-radius: 20px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.cart-cover{
	padding: 0rpx 25rpx;
}
.product-title{
	width: 373rpx;
	height: 52rpx;
	font-size: 24rpx;
	letter-spacing: 1px;
	color: #333333;
}
.size{
	width: 48px;
	height: 22px;
	font-size: 23rpx;
	line-height: 24px;
	letter-spacing: 1px;
	color: #999999;
}
.prict{
	color: #e94b22;
}
.prict-number{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	justify-items: space-between;
}
.bottom-box{
	position: absolute;
	bottom: 0;
	left: 0;
	border-bottom: 1rpx solid #999;
}


