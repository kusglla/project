.active-time{
	font-size: 32rpx!important;
	color: #FB4431!important;
}
.active-bg{
	background:rgba(251,67,48,1);
	height: 46rpx;
	border-radius:23px;
	color: #FFFFFF!important;
	font-size: 32rpx;
}
.active-line{
	border-bottom: 5px solid #FB4330;
	color: #FB4330;
}
.miaosha-time{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 20rpx 50rpx;
}
.miaosha-time>view{
	width: 160rpx;
	text-align: center;
}
.miaosha-time>view>view:nth-child(1){
	color: #333333;
}
.miaosha-time>view>view:nth-child(2){
	font-size: 28rpx;
	color: #999999;
	line-height: 46rpx;
}
/* 秒杀order */
.order-wrap{
	box-sizing: border-box;
	border-radius: 10rpx;
	padding: 30rpx;
	background:rgba(255,255,255,1);
	box-shadow:0px 4px 9px 0px rgba(0, 0, 0, 0.07);
}
.order-item{
	 display: -webkit-box;
	 display: -webkit-flex;
	 display: flex;
	 -webkit-box-pack: justify;
	 -webkit-justify-content: space-between;
	         justify-content: space-between;
	 margin-top: 33rpx;
}
.order-item>.left{
}
.order-item>.right{
	 width: 435rpx;
	 display: -webkit-box;
	 display: -webkit-flex;
	 display: flex;
	 -webkit-box-orient: vertical;
	 -webkit-box-direction: normal;
	 -webkit-flex-direction: column;
	         flex-direction: column;
	 -webkit-box-pack: justify;
	 -webkit-justify-content: space-between;
	         justify-content: space-between;
}
.order-item>.right{
	 font-size:28rpx;
	 font-weight:700;
	 color:rgba(51,51,51,1);
}



