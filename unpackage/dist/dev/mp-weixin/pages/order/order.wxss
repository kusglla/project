
.status-wrap{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 0rpx 20rpx;
	box-sizing: border-box;
}
.status-wrap>view{
	padding: 20rpx 10rpx;
	font-size: 32rpx;
}
.active{
	border-bottom: 4rpx solid #f3be5b;
	color: #f3be5b;
}

/* 订单列表 */
.order-wrap{
	padding: 0rpx 20rpx;
	box-sizing: border-box;
}
.order-item{
	padding: 0rpx 30rpx;
	box-sizing: border-box;
	padding: 20rpx;
	box-sizing: border-box;
	margin-top: 30rpx;
	background-color: #ffffff;
	box-shadow: 0px 0px 13px 0px rgba(1, 1, 1, 0.09);
	border-radius: 10px;
}
.order-item>view:nth-child(1){
	font-size: 26rpx;
	color: #333333;
	font-weight: bold;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.order-item>view:nth-child(2){
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.order-item .left{
	height: 158rpx;
	width: 158rpx;
}
.order-item .right{
	margin-left: 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.order-item .right>view:nth-child(1){
	letter-spacing: 2rpx;
	color: #333333;
}
.order-item .right>view:nth-child(2){
	letter-spacing: 1rpx;
	color: #999999;
}
.order-item .right>view:nth-child(3){
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	letter-spacing: 2rpx;
	color: #eb0029;
}
.btn-bg{
	width: 139rpx;
	height: 57rpx;
	border-radius: 10rpx;
	border: solid 1rpx #cccccc;
	font-size: 26rpx;
	color: #999999;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}

