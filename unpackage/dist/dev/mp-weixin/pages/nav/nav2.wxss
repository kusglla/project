
.search-box{
	width:750rpx;
	height:100rpx;
	background:rgba(225,180,95,1);
}
.regory{
	height: calc(100% - 100rpx);
	width: 100%;
	margin-top: 26rpx;
}

/* 左边列表 */
.regory-left{
	width: 180rpx;
	height: 100%;
}
.regory-left>view{
	height: 60rpx;
	width: 100%;
	padding-left: 18rpx;
	line-height: 60rpx;
	color: #999999;
	box-sizing: border-box;
	margin-top: 20rpx;
}

/* 右边order */
.regory-right{
	height: 100%;
}
.product-item{
	width: 260rpx;
	display: inline-block;
	margin-left: 29rpx;
	margin-top: 54rpx;
}
.product-item:nth-child(1){
	margin-top: 0rpx;
}
.product-item:nth-child(2){
	margin-top: 0rpx;
}
.product-item>view:nth-child(1){
	width: 258rpx;
	height: 200rpx;
}
.product-item>view:nth-child(2){
	color: #333333;
	font-size: 30rpx;
	font-weight:700;
	margin-top: 32rpx;
}
.product-item>view:nth-child(3){
	color: #D21313;
	font-size: 26rpx;
	margin-top: 23rpx;
}
.active{
	border-left: 6rpx solid #00FF00;
	color: #333333!important;
	font-weight:700;
}	

